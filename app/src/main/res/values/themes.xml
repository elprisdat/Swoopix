<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SwoopixApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SwoopixApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <!-- Component customization -->
        <item name="materialButtonStyle">@style/TealButtonStyle</item>
        <item name="textInputStyle">@style/TealTextInputStyle</item>
        <item name="chipStyle">@style/ChipTealStyle</item>
    </style>

    <style name="Theme.Swoopix" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Swoopix.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Swoopix.HeadlineMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Swoopix.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Swoopix.BodyMedium</item>
        
        <!-- Shape appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Swoopix.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Swoopix.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Swoopix.LargeComponent</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.Swoopix.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Swoopix.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Swoopix.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Swoopix.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Shape Styles -->
    <style name="ShapeAppearance.Swoopix.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Swoopix.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Swoopix.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Custom button style -->
    <style name="TealButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Custom text input style -->
    <style name="TealTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="endIconTint">@color/primary</item>
    </style>
</resources>