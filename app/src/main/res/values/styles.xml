<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Gaya untuk Chip -->
    <style name="ChipTealStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconTint">@color/primary</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>
    
    <style name="ChipTealSelectedStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipIconTint">@color/white</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>
</resources> 